<!-- 提示弹窗 -->
<div class="popup-wrap" <% unless flash[:notice].blank? %>style="display:;"
<% else %> style="display:none;"  <% end %> >
    <div class="popup w280  text-center">
        <img class="popup-coupon-img" src="/assets/phone/images/img-popup-smile.png" alt="">
    <div class="popup-main text-center">
        <div class="text-import f16 mb5">
            <i class="ico-right mr5"></i>
            <%= flash[:notice] %>
        </div>

    </div>
    <div class="popup-foot flex-wrap">
        <a class="flex-fluid a-button">确定</a>
    </div>

</div>
<div class="popup-bg"></div>

<script type="text/javascript">
    $(document).ready(function(){
        $('.bc_notice_close_btn').click(function() {
            $('.bc_popup_wrap').hide();
            return
        });
    })
</script>