<!-- 提示弹窗 -->
      <div class="popup-wrap homepage_popup_wrap" <% unless flash[:notice].blank? %>style="display:;" 
  <% else %> style="display:none;"  <% end %> > 
    <div class="popup has-title">
      <div class="popup-title">
        <button class="close" type="button">
          <i class="ico-close hm_notice_close_btn"></i>
        </button>
        温馨提示
      </div>
      <div class="popup-main text-center">
        <div class="text-import f16 mb5">
        <i class="ico-error mr5"></i>
        <%= flash[:notice] %>
        </div>
      </div>
      <div class="popup-foot flex-wrap">
        <a class="flex-fluid a-button hm_notice_close_btn" href="">确定</a>
      </div>
      
    </div>
    <div class="popup-bg"></div>
  </div>
   <script type="text/javascript">
   $(document).ready(function(){
      $('.hm_notice_close_btn').click(function() {
          $('.homepage_popup_wrap').hide();
          return
        });
   })
   </script>
