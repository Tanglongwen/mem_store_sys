<%= form_for [:admin, @config_table_info], :html => { :class => "form-horizontal config_table_info" } do |f| %>
    <% if @config_table_info.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title"><%= pluralize(@config_table_info.errors.count, "error") %> prohibited this config_table_info from being saved:</h3>
            </div>
            <div class="panel-body">
                <ul>
                    <% @config_table_info.errors.full_messages.each do |msg| %>
                        <li>
                            <%= msg %>
                        </li>
                        <% end %>
                </ul>
            </div>
        </div>
        <% end %>
            <div class="panel-body">
                <form action="" class="form-horizontal">
                    <div class="clearfix form-list">
                        <label class="col-xs-2 control-label" for="">
                            <%= f.label :cf_id %>
                        </label>
                        <% if @config_table_info.cf_id == 'HOME_PAGE_IMG' %>
                        <div class="col-xs-4">
                            <%= f.text_field :cf_id, :class => 'form-control',
                            :disabled => true%>
                                <%=f.error_span(:cf_id) %>
                        </div>
                        <% else %>
                        <div class="col-xs-4">
                            <%= f.text_field :cf_id, :class => 'form-control'%>
                                <%=f.error_span(:cf_id) %>
                        </div>
                        <% end %>
                        <label class="col-xs-2 control-label" for="">
                            <%= f.label :cf_desc %>
                        </label>
                        <div class="col-xs-4">
                            <%= f.text_field :cf_desc, :class => 'form-control' %>
                                <%=f.error_span(:cf_desc) %>
                        </div>
                        <label class="col-xs-2 control-label" for="">
                            <%= f.label :cf_value %>
                        </label>
                        <div class="col-xs-4">
                            <%= f.text_field :cf_value, :class => 'form-control' %>
                                <%=f.error_span(:cf_value) %>
                        </div>
                        <% if @config_table_info.cf_id == 'HOME_PAGE_IMG' %>
                            <label class="col-xs-2 control-label" for="">
                                <%= f.label :ad_photo %>
                            </label>
                            <div class="col-xs-4">
                                <%= f.file_field :ad_photo, :class => 'form-control' %>
                                    <%=f.error_span(:ad_photo) %>
                            </div>
                        <% end %>
                    </div>
                </form>
                <div class="block-mt">
                    <%= f.submit nil, :class => 'btn btn-warning' %>
                        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_config_table_infos_path, :class => 'btn btn-default' %>
                </div>
            </div>
            <% end %>