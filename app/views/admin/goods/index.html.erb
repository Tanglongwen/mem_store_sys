<%- model_class = Good -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <%= render 'search_form' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:goods_catalog) %></th>
      <th><%= model_class.human_attribute_name(:spec) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:ispromotion) %></th>
      <th>二维码</th>
      <th><%= model_class.human_attribute_name(:avatar) %></th>
      <th><%= model_class.human_attribute_name(:info) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @goods.each do |good| %>
      <tr>
        <td><%= link_to good.id, admin_good_path(good) %></td>
        <td><%= good.code %></td>
        <td><%= good.name %></td>
        <td><%= good.goods_catalog %></td>
        <td><%= good.spec %></td>
        <td><%= good.status %></td>
        <td><%= good.score %></td>
        <td><%= good.price %></td>
        <td><%= good.ispromotion %></td>
        <td><img class="media-object" src="<%='/uploads/good/qrcode/qrcode_'+good.id.to_s+'.png'%>" alt="Image"></td>
        <td><img class="media-object" src="<%=good.avatar%>" alt="Image"></td>
        <td><img class="media-object" src="<%=good.info%>" alt="Image"></td>
        <td><%=l good.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_good_path(good), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_good_path(good), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_good_path(good),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @goods %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_good_path,
            :class => 'btn btn-primary' %>
