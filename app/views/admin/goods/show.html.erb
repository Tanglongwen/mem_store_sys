<%- model_class = Good -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @good.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @good.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goods_catalog_id) %>:</strong></dt>
  <dd><%= @good.goods_catalog_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spec) %>:</strong></dt>
  <dd><%= @good.spec %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @good.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score) %>:</strong></dt>
  <dd><%= @good.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @good.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ispromotion) %>:</strong></dt>
  <dd><%= @good.ispromotion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar) %>:</strong></dt>
  <dd><img class="media-object" src="<%= @good.avatar %>" alt="Image"></dd>
  <dt><strong><%= model_class.human_attribute_name(:info) %>:</strong></dt>
  <dd><img class="media-object" src="<%= @good.info %>" alt="Image"></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_goods_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_good_path(@good), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_good_path(@good),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
