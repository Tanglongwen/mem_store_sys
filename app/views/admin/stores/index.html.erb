<%- model_class = Store -%>
<div class="page-header">
  <h1>门店列表</h1>
  <%= render 'search_form' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:catalog) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:district) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:province) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th>经纬度</th>
      <th><%= model_class.human_attribute_name(:addr) %></th>
      <th><%= model_class.human_attribute_name(:linkman) %></th>
      <th><%= model_class.human_attribute_name(:contact_num) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <!-- <td><%= link_to store.id, admin_store_path(store) %></td> -->
        <td><%= store.code %></td>
        <td><%= store.catalog %></td>
        <td><%= store.name %></td>
        <td><%= store.district %></td>
        <td><%= store.city %></td>
        <td><%= store.province %></td>
        <td><%= store.country %></td>
        <td><%= store.latitude %>#<%= store.longitude %></td>
        <td><%= store.addr %></td>
        <td><%= store.linkman %></td>
        <td><%= store.contact_num %></td>
        <td><%= store.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_store_path(store), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_store_path(store), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_store_path(store),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '您确认?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @stores %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_store_path,
            :class => 'btn btn-primary' %>
