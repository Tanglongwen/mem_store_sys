<%- model_class = Store -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @store.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:catalog) %>:</strong></dt>
  <dd><%= @store.catalog %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @store.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:district) %>:</strong></dt>
  <dd><%= @store.district %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @store.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:province) %>:</strong></dt>
  <dd><%= @store.province %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @store.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @store.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @store.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:addr) %>:</strong></dt>
  <dd><%= @store.addr %></dd>
  <dt><strong><%= model_class.human_attribute_name(:linkman) %>:</strong></dt>
  <dd><%= @store.linkman %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_num) %>:</strong></dt>
  <dd><%= @store.contact_num %></dd>
  <dt><strong>二维码:</strong></dt>
  <dd><image src="<%= @store.qrcode %>"/></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_stores_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_store_path(@store), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_store_path(@store),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
