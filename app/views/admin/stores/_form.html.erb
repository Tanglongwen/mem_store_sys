<%= form_for [:admin, @store], :html => { :class => "form-horizontal store" } do |f| %>

  <% if @store.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @store.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">新增门店</div>
    </div>
    <div class="panel-body">
      <form action="" class="form-horizontal">
        <div class="clearfix form-list">
          <label class="col-xs-1 control-label" for=""><%= f.label :code%></label>
          <div class="col-xs-3">
            <%= f.text_field :code, :class => 'form-control' %>
            <%=f.error_span(:code) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :catalog %></label>
          <div class="col-xs-3">
            <%= select_tag(:catalog, options_for_select(Const::BOOLEAN_LIST), :class => 'form-control') %>
            
            <%=f.error_span(:catalog) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :name %></label>
          <div class="col-xs-3">
            <%= f.text_field :name, :class => 'form-control' %>
            <%=f.error_span(:name) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :district %></label>
          <div class="col-xs-3">
            <%= f.text_field :district, :class => 'form-control' %>
            <%=f.error_span(:district) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :city%></label>
          <div class="col-xs-3">
            <%= f.text_field :city, :class => 'form-control' %>
            <%=f.error_span(:city) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :province %></label>
          <div class="col-xs-3">
            <%= f.text_field :province, :class => 'form-control' %>
            <%=f.error_span(:province) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :country %></label>
          <div class="col-xs-3">
            <%= f.text_field :country, :class => 'form-control' %>
            <%=f.error_span(:country) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :latitude %></label>
          <div class="col-xs-3">
            <%= f.text_field :latitude, :class => 'form-control' %>
            <%=f.error_span(:latitude) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :longitude %></label>
          <div class="col-xs-3">
            <%= f.text_field :longitude, :class => 'form-control' %>
            <%=f.error_span(:longitude) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :addr%></label>
          <div class="col-xs-3">
            <%= f.text_field :addr, :class => 'form-control' %>
            <%=f.error_span(:addr) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :linkman%></label>
          <div class="col-xs-3">
            <%= f.text_field :linkman, :class => 'form-control' %>
            <%=f.error_span(:linkman) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :contact_num %></label>
          <div class="col-xs-3">
            <%= f.text_field :contact_num, :class => 'form-control' %>
            <%=f.error_span(:contact_num) %>
          </div>
        </div>
      </form>
      <div class="block-mt">
        <%= f.submit nil, :class => 'btn btn-warning' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_stores_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

<% end %>
