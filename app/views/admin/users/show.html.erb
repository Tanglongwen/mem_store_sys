<%- model_class = User -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">用户详情</div>
    </div>
    <div class="panel-body">
      <div class="row lh24">
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:name) %>:</span>
          <%= @user.name %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:email) %>:</span>
          <%= @user.email %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:level) %>:</span>
          <%= @user.level %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:admin) %>:</span>
          <%= @user.admin %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:score) %>:</span>
          <%= @user.score %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:code) %>:</span>
          <%= @user.code %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:sex) %>:</span>
          <%= @user.sex %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:birthday) %>:</span>
          <%= @user.birthday %>
        </div>
         <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:phone_num) %>:</span>
          <%= @user.phone_num %>
        </div>
         <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:score_total) %>:</span>
          <%= @user.score_total %>
        </div> 
         <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:mem_group_id) %>:</span>
          <%= @user.mem_group_id %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:district) %>:</span>
          <%= @user.district %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:city) %>:</span>
          <%= @user.city %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:province) %>:</span>
          <%= @user.province %>
        </div>
       <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:country) %>:</span>
          <%= @user.country %>
        </div>
      <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:referee_id) %>:</span>
          <%= @user.referee_id %>
        </div>
       <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:store_id) %>:</span>
          <%= @user.store_id %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:status) %>:</span>
          <%= @user.status %>
        </div>
      </div>
      <div class="text-left block-mt">
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_user_path(@user), :class => 'btn btn-warning mr10' %>
       <a  class="btn btn-default mr10" href="javascript:void(0);" 
        onclick=window.location.href="<%= admin_users_path%>" >返回
        </a>
      </div>
    </div>
  </div>
  
</div>

