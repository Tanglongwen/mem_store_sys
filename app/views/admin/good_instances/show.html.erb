<%- model_class = GoodInstance -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">商品实例详情</div>
    </div>
    <div class="panel-body">
      <div class="row lh24">
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:code) %>:</span>
          <%= @good_instance.code %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:good_id) %>:</span>
          <%= @good_instance.good_id %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:status) %>:</span>
          <%= @good_instance.status %>
        </div>
      </div>
      <div class="text-left block-mt">
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_good_instance_path(@good_instance), :class => 'btn btn-warning mr10' %>
        <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_good_instances_path, :class => 'btn btn-default mr10'  %>

      </div>
    </div>
  </div>
  
</div>
