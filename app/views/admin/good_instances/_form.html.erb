<%= form_for [:admin, @good_instance], :html => { :class => "form-horizontal good_instance" } do |f| %>

  <% if @good_instance.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@good_instance.errors.count, "error") %> prohibited this good_instance from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @good_instance.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">编辑商品实例</div>
    </div>
    <div class="panel-body">
      <form action="" class="form-horizontal">
        <div class="clearfix form-list">
          <label class="col-xs-2 control-label" for=""><%= f.label :code %></label>
          <div class="col-xs-4">
            <%= f.text_field :code, :class => 'form-control' %>
            <%=f.error_span(:code) %>
          </div>
          <label class="col-xs-2 control-label" for=""><%= f.label :good_id %></label>
          <div class="col-xs-4">
            <%= f.text_field :good_id, :class => 'form-control' %>
            <%=f.error_span(:good_id) %>
          </div>
          <label class="col-xs-2 control-label" for=""><%= f.label :status%></label>
          <div class="col-xs-4">
            <%= f.text_field :status, :class => 'form-control' %>
            <%=f.error_span(:status) %>
          </div>
        </div>
      </form>
      <div class="block-mt">
        <%= f.submit nil, :class => 'btn btn-warning' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_good_instances_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

<% end %>
