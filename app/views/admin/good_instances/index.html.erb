<%- model_class = GoodInstance -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">商品实例列表</div>
    </div>
    <div class="panel-body">
    
<div class="table-responsive block-mt">
        <table class="table table-striped">
          <colgroup>
            <col width="20%">
          </colgroup>
    <tr>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:code) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:good_id) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:status) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-nowrap"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  <tbody>
    <% @good_instances.each do |good_instance| %>
      <tr>
        <td><%= good_instance.code %></td>
        <td><%= good_instance.good_id %></td>
        <td><%= good_instance.status %></td>
        <td><%= good_instance.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_good_instance_path(good_instance), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_good_instance_path(good_instance), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_good_instance_path(good_instance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '您确认?')) },
                      :class => 'btn btn-warning btn-xs mr5' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_good_instance_path,
            :class => 'btn btn-warning' %>
          </div>
          <%= paginate @good_instances %>
                </div>
            </div>
        </div>


