<div class="container">
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">修改首页底部广告</div>
        </div>
        <div class="panel-body">
        <%= form_tag("/admin/ad_modifies", :multipart => true, method: "post", class: "form-inline") do %>
            <div class="form-group">
                <%= label_tag(:tltle, "标题:") %>
                    <%= text_field_tag(:title,@name, class: "form-control")  %>
            </div>
            <div class="form-group">
                <%= label_tag(:url, "链接:") %>
                    <%= text_field_tag(:url,'请填写完整链接', class: "form-control")  %>
            </div>
            <div class="form-group">
                <%= label_tag(:image, "图片:") %>
                    <%= file_field_tag(:image, :class=>'form-control')  %>
            </div>
            <div class="block-mt">
                <%= submit_tag("保存", class: "btn btn-warning") %>
                <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_ad_modifies_path, :class => 'btn btn-default' %>
            </div>
        </div>
    </div>
</div>
<% end %>