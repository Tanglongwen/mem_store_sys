<%- model_class = GoodsCatalog -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">商品分类列表</div>
    </div>
    <div class="panel-body">
<div class="table-responsive block-mt">
        <table class="table table-striped">
          <colgroup>
            <col width="20%">
          </colgroup>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th class="text-nowrap"><%= model_class.human_attribute_name(:code) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:name) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-nowrap"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @goods_catalogs.each do |goods_catalog| %>
      <tr>
        <!-- <td><%= link_to goods_catalog.id, admin_goods_catalog_path(goods_catalog) %></td> -->
        <td><%= goods_catalog.code %></td>
        <td><%= goods_catalog.name %></td>
        <td><%= goods_catalog.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_goods_catalog_path(goods_catalog), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_goods_catalog_path(goods_catalog), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_goods_catalog_path(goods_catalog),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '您确认?')) },
                      :class => 'btn btn-warning btn-xs mr5' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 <!-- <%= hidden_field_tag 'goods_catalog_notice', flash[:notice] %> -->
</div>
<div>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_goods_catalog_path,
            :class => 'btn btn-warning' %>
  </div>
  <%= paginate @goods_catalogs %>
                </div>
            </div>
        </div>

<script type="text/javascript">
 function goods_catalog_show_notice(){
        var notice = $("#goods_catalog_notice").val()
          if(notice != "" && notice != null) {
            alert(notice)
          }
          $("#goods_catalog_notice").val(""); 
      }

    $(document).ready(function(){
        goods_catalog_show_notice()
    })

</script>