<%= form_for [:admin,@bonus_change], :html => { :class => "form-horizontal bonus_change" } do |f| %>

  <% if @bonus_change.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bonus_change.errors.count, "error") %> prohibited this bonus_change from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bonus_change.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :score, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :score, :class => 'form-control' %>
    </div>
    <%=f.error_span(:score) %>
  </div>
  <div class="form-group">
    <%= f.label :red_packet, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :red_packet, :class => 'form-control' %>
    </div>
    <%=f.error_span(:red_packet) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-warning' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_bonus_changes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
