<%- model_class = BonusChange -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">积分红包兑换列表</div>
    </div>
    <div class="panel-body">
<div class="table-responsive block-mt">
        <table class="table table-striped">
          <colgroup>
            <col width="20%">
          </colgroup>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th class="text-nowrap"><%= model_class.human_attribute_name(:score) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:red_packet) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-nowrap">
      <%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  <tbody>
    <% @bonus_changes.each do |bonus_change| %>
      <tr>
        <!-- <td><%= link_to bonus_change.id, admin_bonus_change_path(bonus_change) %></td> -->
        <td><%= bonus_change.score %></td>
        <td><%= bonus_change.red_packet %></td>
        <td><%= bonus_change.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_bonus_change_path(bonus_change), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_bonus_change_path(bonus_change), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_bonus_change_path(bonus_change),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '您确认?')) },
                      :class => 'btn btn-warning btn-xs mr5' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_bonus_change_path,
            :class => 'btn btn-warning' %>
</div>
<%= paginate @bonus_changes %>
 </div>
            </div>
        </div>


