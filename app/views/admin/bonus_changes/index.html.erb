<%- model_class = BonusChange -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:red_packet) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bonus_changes.each do |bonus_change| %>
      <tr>
        <td><%= link_to bonus_change.id, admin_bonus_change_path(bonus_change) %></td>
        <td><%= bonus_change.score %></td>
        <td><%= bonus_change.red_packet %></td>
        <td><%= bonus_change.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_bonus_change_path(bonus_change), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_bonus_change_path(bonus_change), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_bonus_change_path(bonus_change),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @bonus_changes %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_bonus_change_path,
            :class => 'btn btn-primary' %>
