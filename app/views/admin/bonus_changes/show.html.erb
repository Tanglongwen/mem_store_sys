<%- model_class = BonusChange -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:score) %>:</strong></dt>
  <dd><%= @bonus_change.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:red_packet) %>:</strong></dt>
  <dd><%= @bonus_change.red_packet %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_bonus_changes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_bonus_change_path(@bonus_change), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_bonus_change_path(@bonus_change),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
