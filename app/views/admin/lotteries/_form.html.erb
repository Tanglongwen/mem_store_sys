<%= form_for [:admin, @lottery], :html => { :class => "form-horizontal lottery" } do |f| %>

  <% if @lottery.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@lottery.errors.count, "error") %> prohibited this lottery from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @lottery.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :activity_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :activity_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:activity_id) %>
  </div>
  <div class="form-group">
    <%= f.label :activity_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :activity_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:activity_name) %>
  </div>
  <div class="form-group">
    <%= f.label :winning, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :winning, :class => 'form-control' %>
    </div>
    <%=f.error_span(:winning) %>
  </div>
  <div class="form-group">
    <%= f.label :activity_award_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :activity_award_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:activity_award_id) %>
  </div>
  <div class="form-group">
    <%= f.label :activity_award_cfg_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :activity_award_cfg_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:activity_award_cfg_id) %>
  </div>
  <div class="form-group">
    <%= f.label :activity_award_cfg_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :activity_award_cfg_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:activity_award_cfg_name) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_lotteries_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
