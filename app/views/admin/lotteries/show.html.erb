<%- model_class = Lottery -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">会员中奖纪录</div>
    </div>
    <div class="panel-body">
      <div class="row lh24">
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:activity_id) %>:</span>
          <%= @lottery.activity_id %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:activity_name) %>:</span>
          <%= @lottery.activity_name %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:winning) %>:</span>
          <%= @lottery.winning %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:activity_award_id) %>:</span>
          <%= @lottery.activity_award_id %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:activity_award_cfg_id) %>:</span>
          <%= @lottery.activity_award_cfg_id %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:activity_award_cfg_name) %>:</span>
          <%= @lottery.activity_award_cfg_name %>
        </div>
        <div class="col-xs-3">
          <span class="text-gray"><%= model_class.human_attribute_name(:user_id) %>:</span>
          <%= @lottery.user_id %>
        </div>
      </div>
      <div class="text-left block-mt">
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_lottery_path(@lottery), :class => 'btn btn-warning mr10' %>
        <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_lotteries_path, :class => 'btn btn-default'  %>
        
        <!--<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_lottery_path(@lottery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-warning btn-xs mr5' %> -->
      </div>
    </div>
  </div>
</div>