<%- model_class = Lottery -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:activity_id) %>:</strong></dt>
  <dd><%= @lottery.activity_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activity_name) %>:</strong></dt>
  <dd><%= @lottery.activity_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:winning) %>:</strong></dt>
  <dd><%= @lottery.winning %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activity_award_id) %>:</strong></dt>
  <dd><%= @lottery.activity_award_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activity_award_cfg_id) %>:</strong></dt>
  <dd><%= @lottery.activity_award_cfg_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activity_award_cfg_name) %>:</strong></dt>
  <dd><%= @lottery.activity_award_cfg_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @lottery.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_lotteries_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_lottery_path(@lottery), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_lottery_path(@lottery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
