<%= form_for [:admin, @mem_group], :html => { :class => "form-horizontal mem_group" } do |f| %>

  <% if @mem_group.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@mem_group.errors.count, "error") %> prohibited this mem_group from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @mem_group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
    <div class="panel-body">
      <form action="" class="form-horizontal">
        <div class="clearfix form-list">
          <label class="col-xs-1 control-label" for=""><%= f.label :city %></label>
          <div class="col-xs-3">
            <%= f.text_field :city, :class => 'form-control' %>
            <%=f.error_span(:city) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :province %></label>
          <div class="col-xs-3">
            <%= f.text_field :province, :class => 'form-control' %>
            <%=f.error_span(:province) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :country %></label>
          <div class="col-xs-3">
            <%= f.text_field :country, :class => 'form-control' %>
            <%=f.error_span(:country) %>
          </div>
        </div>
      </form>
      <div class="block-mt">
        <%= f.submit nil, :class => 'btn btn-warning' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_mem_groups_path, :class => 'btn btn-default' %>
      </div>
    </div>

<% end %>
