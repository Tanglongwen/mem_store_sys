<%= form_for [:admin, @mem_group], :html => { :class => "form-horizontal mem_group" } do |f| %>

  <% if @mem_group.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@mem_group.errors.count, "error") %> prohibited this mem_group from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @mem_group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
    <%=f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :province, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :province, :class => 'form-control' %>
    </div>
    <%=f.error_span(:province) %>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :country, :class => 'form-control' %>
    </div>
    <%=f.error_span(:country) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_mem_groups_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
