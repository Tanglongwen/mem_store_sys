<%- model_class = MemGroup -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">会员分组列表</div>
    </div>
    <div class="panel-body">
<div class="table-responsive block-mt">
        <table class="table table-striped">
          <colgroup>
            <col width="20%">
          </colgroup>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th class="text-nowrap"><%= model_class.human_attribute_name(:city) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:province) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:country) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-nowrap"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mem_groups.each do |mem_group| %>
      <tr>
        <!-- <td><%= link_to mem_group.id, admin_mem_group_path(mem_group) %></td> -->
        <td><%= mem_group.city %></td>
        <td><%= mem_group.province %></td>
        <td><%= mem_group.country %></td>
        <td><%= mem_group.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_mem_group_path(mem_group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_mem_group_path(mem_group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_mem_group_path(mem_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '您确认?')) },
                      :class => 'btn btn-warning btn-xs mr5' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_mem_group_path,
            :class => 'btn btn-warning' %>
</div>
</div>
<%= paginate @mem_groups %>
                </div>
            </div>
        </div>


