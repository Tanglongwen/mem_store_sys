<!-- tab1 -->
<div class="container" id="tab1" <% if @show_page == Const::ACTIVITY_SHOW_PAGE[:base]%> f=1 style="display: block;" <% else %> style="display: none;" <% end %> >
	<div class="row block-mt active-set-wrap">
		<div class="col-xs-4">
			<div class="panel active-set-panel">
				<div class="phone-preview">
					<div class="biaoti">活动标题</div>
					<iframe src="/phone/activities" frameborder="0" height="375px" width="99%"></iframe>	
				</div>	
			</div>
		</div>
		<div class="col-xs-8">
			<div class="panel active-set-panel">
				<div class="panel-body">
					<form action="" class="form-horizontal	">
						<div class="form-group">
							<label class="col-xs-2 control-label text-right">活动标题</label>
							<div class="col-xs-5">
								<input class="form-control" type="text">
							</div>
						</div>
						<div class="form-group">
							<label class="col-xs-2 control-label text-right">开始时间</label>
							<div class="col-xs-5">
								<div class="input-group">
									<input class="form-control text-gray" type="text" value="开始时间">
									<span class="input-group-addon">
										<span class="glyphicon glyphicon-calendar"></span>
									</span>
									<!-- onfocus时请将text-gray去掉此样式控制字体为浅色 -->
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="col-xs-2 control-label text-right">结束时间</label>
							<div class="col-xs-5">
								<div class="input-group">
									<input class="form-control text-gray" type="text" value="结束时间">
									<span class="input-group-addon">
										<span class="glyphicon glyphicon-calendar"></span>
									</span>
									<!-- onfocus时请将text-gray去掉此样式控制字体为浅色 -->
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="col-xs-2 control-label text-right">活动说明</label>
							<div class="col-xs-7">
								<textarea class="form-control" name="" id="" rows="5"></textarea>
							</div>
						</div>
						<div class="form-group">
							<label class="col-xs-2 control-label text-right">背景图片</label>
							<div class="col-xs-5">
								<input class="form-control" type="text">
								
							</div>
							<div class="col-xs-5">
								<button class="btn btn-outline-warning btn-sm ui-file" type="button">
									上传
									<input type="file">
								</button>
								<button class="btn btn-outline-success btn-sm ml10">重置</button>
							</div>
						</div>
					</form>
					<div class="text-center mt20">
						<button class="btn btn-info">预览</button>
						<button class="btn btn-warning ml10">确定</button>
						<button class="btn btn-normal ml10">取消</button>
					</div>
				</div>

			</div>
			
		</div>
	</div>
</div>
<!-- tab2 -->
<div class="container" id="tab2" <% if @show_page == Const::ACTIVITY_SHOW_PAGE[:award]%> f=1 style="display: block;" <% else %> style="display: none;" <% end %> >
	<div class="text-right mt10	">
		<form action="" class="form-inline">
			<select class="form-control" name="award_count" id="award_count">
				<% ['六','五','四','三','二','一'].each_with_index  do |val, index| %>
					<option value="<%= index %>">奖项<%= val %></option>
				<% end %>
			</select>
		</form>
		
	</div>
	<div class="panel block-mt ">
		<div class="prize-set-wrap">
			<table>
				<tr>
					<th class="text-top">
						<div class="prize-list-wrap">
							<ul class="prize-list">
								<% ['一','二','三','四','五','六'].each_with_index  do |val, index| %>
									<li <% if index==0 %> class="prize-name active" <% else %> class="prize-name " <% end %> > 
										<a href=""><%= val %>等奖</a>
									</li>
								<% end %>					
							</ul>
						</div>
					</th>
					<td class="text-top">
						<div class="panel-body">
							<form action="" class="form-horizontal">
								<div class="form-group">
									<label class="col-xs-1 control-label text-right">奖项类型</label>
									<div class="col-xs-5">
										<input class="form-control" type="text">
									</div>
								</div>
								<div class="form-group">
									<label class="col-xs-1 control-label text-right">奖项名称</label>
									<div class="col-xs-5">
										<input class="form-control" id="_sys_awardaccept_cfgs" type="text"  placeholder="选择" data-toggle="modal" data-target="#modal-award-cfg-item">
									</div>
									<div class="col-xs-5">
										<span class="lh30 text-gray">
											<span class="glyphicon glyphicon-info-sign"></span>
											活动发布后将无法更改产品
										</span>
									</div>
								</div>
								<div class="form-group">
									<label class="col-xs-1 control-label text-right">中奖率</label>
									<div class="col-xs-5">
										<div class="input-group">
											<input class="form-control text-gray" type="text" placeholder="中奖率">
											<span class="input-group-addon">%</span>
											<!-- onfocus时请将text-gray去掉此样式控制字体为浅色 -->
										</div>
									</div>
									<div class="col-xs-6">
										<span class="lh30 text-gray">
											<span class="glyphicon glyphicon-info-sign"></span>
											数值在0-100间
										</span>
									</div>
								</div>
							</form>
						</div>
					</td>
				</tr>
			</table>
		</div>
	</div>


	<div class="block-mt text-center">
		<button class="btn btn-warning">确定</button>
		<button class="btn btn-normal ml10">取消</button>
	</div>
		</div>
<!-- tab2 end -->
<!-- tab3  -->
<%= form_for [:admin, @activity], :html => { :class => "form-horizontal activity" } do |f| %>
<div class="container" id="tab3" <% if @show_page == Const::ACTIVITY_SHOW_PAGE[:cfg]%> style="display: block;" <% else %> style="display: none;" <% end %> >
	<div class="panel block-mt">
		<div class="panel-heading">
			<div class="panel-title">新增产品类别</div>
		</div>
		<div class="panel-body">
			<form action="" class="form-horizontal">
				<div class="form-group">
					<label class="col-xs-1 control-label text-right">奖品名称</label>
					<div class="col-xs-4">
						<input class="form-control" type="text" name="activity_award_cfg[name]" id="activity_award_cfg_code">
					</div>
				</div>
				<div class="form-group">
					<label class="col-xs-1 control-label text-right">奖品大类</label>
					<div class="col-xs-4">
						<select class="form-control" name="activity_award_cfg[level_I]" id="activity_award_cfg_level_I">
							<option value="">积分奖品</option>
							<option value="">积分奖品2</option>
							<option value="">积分奖品3</option>
						</select>
					</div>
				</div>	
				<div class="form-group">
					<label class="col-xs-1 control-label text-right">积分值</label>
					<div class="col-xs-4">
						<div class="input-group">
							<input class="form-control text-gray" type="text" placeholder="请输入积分值" name="activity_award_cfg[score]" id="activity_award_cfg_score">
							<span class="input-group-addon">%</span>
							<!-- onfocus时请将text-gray去掉此样式控制字体为浅色 -->
						</div>
						
					</div>
					<div class="col-xs-4 text-gray lh30">
						<span class="glyphicon glyphicon-info-sign"></span> 数值在0-100间
					</div>
				</div>	
				<div class="form-group">
					<label class="col-xs-1 control-label text-right">奖品图标</label>
					<div class="col-xs-4">
						<input class="form-control text-gray" type="text" placeholder="请选择图标文件">
						<!-- onfocus时请将text-gray去掉 -->
					</div>

					<div class="col-xs-4">
						<button class="btn btn-outline-warning btn-sm ui-file" type="button">
							上传
							<input type="file">
						</button>
						<button class="btn btn-outline-success btn-sm ml10" type="button">重置</button>
					</div>
				</div>	
			</form>
		</div>
		
	</div>
	<div class="block-mt text-center">
		<input type="submit" name="commit" value="保存" class="btn btn-primary" data-disable-with="保存">
		<button class="btn btn-normal ml10">返回</button>
	</div>
</div>
<% end %>
