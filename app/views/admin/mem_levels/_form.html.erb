<%= form_for [:admin, @mem_level], :html => { :class => "form-horizontal mem_level" } do |f| %>

  <% if @mem_level.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@mem_level.errors.count, "error") %> prohibited this mem_level from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @mem_level.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">新增会员等级</div>
    </div>
    <div class="panel-body">
      <form action="" class="form-horizontal">
        <div class="clearfix form-list">
          <label class="col-xs-1 control-label" for=""><%= f.label :code %></label>
          <div class="col-xs-3">
            <%= f.text_field :code, :class => 'form-control' %>
            <%=f.error_span(:code) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :name %></label>
          <div class="col-xs-3">
            <%= f.text_field :name, :class => 'form-control' %>
            <%=f.error_span(:name) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :level %></label>
          <div class="col-xs-3">
            <%= f.text_field :level, :class => 'form-control' %>
            <%=f.error_span(:level) %>
          </div>
          <label class="col-xs-1 control-label" for=""><%= f.label :score %></label>
          <div class="col-xs-3">
            <%= f.text_field :score, :class => 'form-control' %>
            <%=f.error_span(:score) %>
          </div>
        </div>
      </form>
      <div class="block-mt">
        <%= f.submit nil, :class => 'btn btn-warning' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_mem_levels_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

<% end %>
