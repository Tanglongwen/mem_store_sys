<%- model_class = MemLevel -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">会员等级列表</div>
    </div>
    <div class="panel-body">
<div class="table-responsive block-mt">
        <table class="table table-striped">
          <colgroup>
            <col width="20%">
          </colgroup>
    <tr>
    <!--
    <th class="text-nowrap"><%= model_class.human_attribute_name(:id) %></th> -->
      <th class="text-nowrap"><%= model_class.human_attribute_name(:code) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:name) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:level) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:score) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-nowrap">
      <%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% prev_score = @init_score %>
    <% @mem_levels.each do |mem_level| %>
      <tr>
      <!-- <td>
      <%= link_to mem_level.id, admin_mem_level_path(mem_level) %></td> -->
        <td><%= mem_level.code %></td>
        <td><%= mem_level.name %></td>
        <td><%= mem_level.level %></td>
        <td><%= prev_score %>-<%= mem_level.score %></td>
        <% prev_score = mem_level.score %>
        <td><%= mem_level.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_mem_level_path(mem_level), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_mem_level_path(mem_level), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_mem_level_path(mem_level),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-warning btn-xs mr5' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_mem_level_path,
            :class => 'btn btn-warning' %>
</div>
<%= paginate @mem_levels %>
</div>
            </div>
        </div>

