<%= form_for [:admin,@score_history], :html => { :class => "form-horizontal score_history" } do |f| %>

  <% if @score_history.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@score_history.errors.count, "error") %> prohibited this score_history from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @score_history.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :point, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :point, :class => 'form-control' %>
    </div>
    <%=f.error_span(:point) %>
  </div>
  <div class="form-group">
    <%= f.label :object_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :object_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:object_type) %>
  </div>
  <div class="form-group">
    <%= f.label :object_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :object_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:object_id) %>
  </div>
  <div class="form-group">
    <%= f.label :oper, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :oper, :class => 'form-control' %>
    </div>
    <%=f.error_span(:oper) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-warning' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_score_histories_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
